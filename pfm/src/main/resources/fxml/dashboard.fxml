<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.Label?>

<BorderPane xmlns="http://javafx.com/javafx/20"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.yourorg.finance.controller.DashboardController">

    <!-- Top: Overview cards -->
    <top>
        <HBox spacing="20">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Card placeholders -->
            <BorderPane style="-fx-border-color: gray; -fx-border-width: 1; -fx-padding: 10;">
                <center>
                    <Label text="Total Balance: $0.00" />
                </center>
            </BorderPane>
            <BorderPane style="-fx-border-color: gray; -fx-border-width: 1; -fx-padding: 10;">
                <center>
                    <Label text="Monthly Expenses: $0.00" />
                </center>
            </BorderPane>
            <BorderPane style="-fx-border-color: gray; -fx-border-width: 1; -fx-padding: 10;">
                <center>
                    <Label text="Goals Progress: 0%" />
                </center>
            </BorderPane>
        </HBox>
    </top>

    <!-- Center: Charts -->
    <center>
        <HBox spacing="20">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <PieChart fx:id="categoryChart" prefWidth="400" prefHeight="300"/>
            <LineChart fx:id="trendChart"
                       prefWidth="600" prefHeight="300">
                <xAxis>
                    <NumberAxis label="Day"/>
                </xAxis>
                <yAxis>
                    <NumberAxis label="Amount"/>
                </yAxis>
            </LineChart>
        </HBox>
    </center>
</BorderPane>
