<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/20"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.yourorg.finance.controller.TransactionsController">

    <!-- Top tool bar with your CRUD buttons -->
    <top>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button fx:id="addBtn"  text="Add Transaction"/>
            <Button fx:id="editBtn" text="Edit Selected"/>
            <Button fx:id="delBtn"  text="Delete Selected"/>
        </HBox>
    </top>

    <!-- Center table view for transactions -->
    <center>
        <TableView fx:id="table"
                     prefWidth="800">
            <columns>
                <TableColumn fx:id="dateCol" text="Date"        prefWidth="100"/>
                <TableColumn fx:id="descCol" text="Description" prefWidth="300"/>
                <TableColumn fx:id="catCol"  text="Category"    prefWidth="150"/>
                <TableColumn fx:id="amtCol"  text="Amount"      prefWidth="100"/>
            </columns>
        </TableView>
    </center>

</BorderPane>
