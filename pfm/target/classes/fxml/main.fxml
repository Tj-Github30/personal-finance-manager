<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Region?>
<BorderPane xmlns="http://javafx.com/javafx/20"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.yourorg.finance.controller.MainController">

    <!-- Top bar: title + logout -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding:10; -fx-background-color:#eee;">
            <!-- Page title; we'll update this in the controller -->
            <Label fx:id="pageTitle" text="Dashboard" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Logout" onAction="#onLogout"/>
        </HBox>
    </top>

    <!-- Sidebar -->
    <left>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Dashboard"    onAction="#onDashboard"    />
            <Button text="Transactions" onAction="#onTransactions" />
            <Button text="Budgets"      onAction="#onBudgets"      />
            <Button text="Reports"      onAction="#onReports"      />
            <Button text="Reminders"    onAction="#onReminders"    />
        </VBox>
    </left>

    <!-- Main content area -->
    <center>
        <StackPane fx:id="contentPane">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </StackPane>
    </center>
</BorderPane>
