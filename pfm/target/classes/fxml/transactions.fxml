<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx/20"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.yourorg.finance.controller.TransactionsController">

    <!-- Top: Buttons + Filters -->
    <top>
        <!-- Stack your toolâ€‘bar and your filters with a little vertical gap -->
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Add/Edit/Delete -->
            <Button fx:id="addBtn"  text="Add Transaction"/>
            <Button fx:id="editBtn" text="Edit Selected"/>
            <Button fx:id="delBtn"  text="Delete Selected"/>

            <!-- spacer -->
            <HBox/>
            <!-- Month & Year filters -->
            <HBox spacing="10">
                <ComboBox fx:id="monthFilter" promptText="Month"/>
                <ComboBox fx:id="yearFilter"  promptText="Year"/>
            </HBox>
        </HBox>
    </top>

    <!-- Center: Table -->
    <center>
        <TableView fx:id="table" prefWidth="800">
            <columns>
                <TableColumn fx:id="dateCol" text="Date"        prefWidth="100"/>
                <TableColumn fx:id="descCol" text="Description" prefWidth="300"/>
                <TableColumn fx:id="catCol"  text="Category"    prefWidth="150"/>
                <TableColumn fx:id="amtCol"  text="Amount"      prefWidth="100"/>
            </columns>
        </TableView>
    </center>

</BorderPane>
