<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/20"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.yourorg.finance.controller.ReportsController">

    <top>
        <HBox spacing="10">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            <ComboBox fx:id="monthFilter" promptText="Month"/>
            <ComboBox fx:id="yearFilter"  promptText="Year"/>
            <Button   fx:id="generateBtn" text="Generate Report"/>
        </HBox>
    </top>

    <center>
        <SplitPane orientation="VERTICAL">
            <TableView fx:id="reportTable">
                <columns>
                    <TableColumn fx:id="categoryCol" text="Category" prefWidth="150"/>
                    <TableColumn fx:id="budgetCol"   text="Budgeted"  prefWidth="100"/>
                    <TableColumn fx:id="spentCol"    text="Spent"     prefWidth="100"/>
                    <TableColumn fx:id="varianceCol" text="Variance"  prefWidth="100"/>
                </columns>
            </TableView>

            <BarChart fx:id="varianceChart">
                <xAxis>
                    <CategoryAxis fx:id="xAxis"/>
                </xAxis>
                <yAxis>
                    <NumberAxis fx:id="yAxis"/>
                </yAxis>
            </BarChart>
        </SplitPane>
    </center>
</BorderPane>
